{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": "../",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@docs/*": ["./"],
      "cdx-component/*": ["../packages/cdx-component"]
    },
    "resolveJsonModule": true,
    "types": ["../types/components.d.ts"],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noEmit": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["**/*", ".vitepress/**/*", "../packages/cdx-component/**/*"],
  "exclude": ["node_modules"]
}
