{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "docs",
    "build"
  ],
  "packageManager": "pnpm@8.14.3",
  "scripts": {
    "build": "pnpm -C ./internal/build build",
    "build:theme": "pnpm -C ./internal/build build:theme",
    "build:common": "pnpm build:build-utils",
    "build:build-utils": "pnpm -C ./internal/build-utils build && pnpm i",
    "docs:dev": "pnpm -C ./docs dev",
    "docs:build": "pnpm -C ./docs build",
    "play:dev": "pnpm -C ./playground dev",
    "create": "tsx ./scripts/create.ts",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@cdx-component/build-utils": "workspace:^",
    "@cdx-component/constants": "workspace:^",
    "@cdx-component/utils": "workspace:^",
    "@prettier/plugin-xml": "^3.4.1",
    "@stylistic/eslint-plugin": "^2.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.19.10",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^9.3.0",
    "eslint-config-flat-gitignore": "^0.1.5",
    "eslint-plugin-antfu": "^2.3.3",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-markdown": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-plugin-unused-imports": "^4.0.0",
    "eslint-plugin-vue": "^9.26.0",
    "eslint-plugin-yml": "^1.14.0",
    "fs-extra": "^11.2.0",
    "globals": "^15.6.0",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "^0.5.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.2.5",
    "prompts": "^2.4.2",
    "tsx": "^4.7.3",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^1.8.25",
    "yaml-eslint-parser": "^1.2.3"
  }
}
