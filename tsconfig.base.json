{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "types": [],
    "composite": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@cdx-component/*": ["./packages/*"]
    }
  }
}
